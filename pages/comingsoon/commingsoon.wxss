.movie-card-wrap {
  height: 70px;
  padding: 5px 10px 5px 65px;
  border: 1px solid #eee;
  font-size: 13px;
  color: #666;
  position: releative;
}

.movie-post {
  width: 50px;
  height: 70px;
  background: #eee;
  position:absolute;
  left: -50px;
}

.movie-title {
  font-size: 13px;
  font-weight: 600;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  max-width: 200px;
  margin-left: 5px;
  float: left;
  margin-bottom: 15px;
  color: #333;
  clear: both;
}

.movie-type,
.movie-time {
  font-size: 12px;
  margin-left: 5px;
  margin-bottom: 15px;
  margin-right: 10px;
  float: left;
  clear: both;
}

.movie-type text,
.movie-time text {
  font-weight: 600;
  color: #333;
}

.movie-rating {
  font-size:36px;
color:#f36;
font-weight:600;
position:absolute;
width:100px;
height:70px;
line-height:70px;
right:0;
text-align: center;
}