<!--index.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
</view>

<!-- 我的收藏 -->
<view class="my-collection" hover-stay-time="100" hover-class="my-collection-hover" bindtap="showCollection">
  <view class="">我的收藏</view>
</view>

<!-- 清除本地数据 -->
<view class="clear-data" hover-stay-time="100" hover-class="clear-data-hover" bindtap="clearData">
  <view class="">清除本地数据</view>
</view>
