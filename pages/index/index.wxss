/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding:30px 0;
  background: rgba( 78,192, 70, .5);
  margin-bottom: 40px;
} 

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.my-collection,
.clear-data {
  height: 40px;
  border-bottom: 1px solid rgba( 78,192, 70, .6);
  border-top: 1px solid rgba( 78,192, 70, .6);
  font-size: 14px;
  line-height: 40px;
  text-align: center;
  background: rgba( 78,192, 70, .5);
  color: #fff;

}

.my-collection-hover {
  background: rgba( 78,192, 70, .3);
}

.clear-data {
  margin-top: 5px;
}

.clear-data-hover {
  background: rgba( 78,192, 70, .3);
}