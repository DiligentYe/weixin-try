/* intheaters.wxss */
.movie-card-wrap {
  border-top: 1px solid #eee;
  padding-left: 15px;
}
.movie-card {
  height: 70px;
  padding: 5px 10px 5px 55px;
  border-bottom: 1px solid #eee;
  font-size: 13px;
  color: #666;
  position: relative;
}

.movie-post {
  width: 50px;
  height: 70px;
  position:absolute;
  left:-2px;
}

.movie-title {
  font-size: 13px;
  font-weight: 600;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  max-width: 200px;
  margin-left: 5px;
  float: left;
  margin-bottom: 15px;
  color: #333;
  clear: both;
}

.movie-type,
.movie-time {
  font-size: 12px;
  margin-left: 5px;
  margin-bottom: 15px;
  margin-right: 10px;
  float: left;
  clear: both;
}

.movie-type text,
.movie-time text {
  font-weight: 600;
  color: #333;
}

.movie-time {
  margin-bottom: 0;
}

.movie-rating {
  font-size:30px;
  color:#f36;
  font-weight:600;
  position:absolute;
  width:80px;
  height:70px;
  line-height:50px;
  right:0;
  text-align:center; 
}

.movie-add {
  position:absolute;
  right:20px;
  bottom:10px;
  width:40px;
  height:20px;
  text-align:center;
  line-height:20px;
  border: 1px solid #eee;
  border-radius: 2px;
}
.end-tips {
  text-align:center;
  font-size:12px;
  padding:5px 0;
}