<!--intheaters.wxml-->
<template name="movieList">
<view class="movie-card-wrap">
  <block wx:for="{{inTheaterMovie}}" wx:for-item="movie" bindtap="showDetail">
    <view class="movie-card" wx:key="{{movie.id}}" data-id="{{movie.id}}" bindtap="showDetail">
      <image src="" class="movie-post" id="movie-post" src="{{movie.images.small}}" mode="aspectFit"></image>
      <view class="movie-title">电影名称：{{movie.title}}</view>
      <view class="movie-type"><text>类型：</text>{{movie.genres}}</view>
      <view class="movie-time"><text>上映时间：</text>{{movie.year}}</view>
      <view class="movie-rating">{{movie.rating.average}}</view>
      <view class="movie-add" wx:if="{{!movie.isAdd}}" catchtap="addMovie" data-id="{{movie.id}}">收藏</view>
      <view class="movie-added" wx:if="{{movie.isAdd}}" catchtap="addMovie"data-id="{{movie.id}}">收藏</view>
    </view>
  </block>
</view>
</template>

<template is="movieList" data="{{inTheaterMovie}}" />


